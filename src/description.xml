<?xml version="1.0" encoding="UTF-8"?>
<description xmlns="http://openoffice.org/extensions/description/2006"
             xmlns:d="http://openoffice.org/extensions/description/2006"
             xmlns:xlink="http://www.w3.org/1999/xlink">
    
    <identifier value="org.libreoffice.libreassist"/>
    
    <version value="1.0.0"/>

    <icon>
        <default xlink:href="icons/logo-48.png"/>
    </icon>
    
    <dependencies>
        <OpenOffice.org-minimal-version value="4.0" d:name="OpenOffice.org 4.0"/>
    </dependencies>
    
    <registration>
        <simple-license accept-by="admin" suppress-on-update="true">
            <license-text xlink:href="registration/license.txt" lang="en"/>
        </simple-license>
    </registration>
    
    <publisher>
        <name xlink:href="https://github.com/NikolaiRadke/LibreAssist">Nikolai Radke</name>
    </publisher>
    
    <display-name>
        <name lang="en">LibreAssist</name>
        <name lang="de">LibreAssist</name>
        <name lang="fr">LibreAssist</name>
        <name lang="it">LibreAssist</name>
        <name lang="es">LibreAssist</name>
    </display-name>
    
    <extension-description>
        <src xlink:href="pkg-description/pkg-description.en" lang="en"/>
    </extension-description>
    
</description>
